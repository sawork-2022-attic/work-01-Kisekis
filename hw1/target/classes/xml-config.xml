<?asciipanel.xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
          http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="font_cp437_8x8" class="asciipanel.xml.AsciiFont_CP437_8x8"/>
    <bean id="font_cp437_10x10" class="asciipanel.xml.AsciiFont_CP437_10x10"/>
    <bean id="panel" class="asciipanel.AsciiPanel">
        <constructor-arg name="width" value="10"/>
        <constructor-arg name="height" value="16"/>
        <constructor-arg name="font" ref="font_cp437_10x10"/>
    </bean>

</beans>